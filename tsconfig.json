{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "types": ["bun-types"],
    "plugins": [{ "name": "@effect/language-service" }]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "pdf-to-json"]
}
